
@{
    ViewBag.Title = "RenewPassword";
    Layout = "~/Views/Shared/LoginLayout/_LoginLayout.cshtml";
}

<div class="card" style="width: 30rem;">
    <div class="card-body">
        <form action="UpdatePassWord" method="POST">
            <h4 class="form-label">Tạo mật khẩu mới</h4>
            <input type="password" name="Password" class="form-control" placeholder="Tạo mật khẩu mới" />
            @Html.ValidationMessage("PasswordError", new { @class = "text-danger" })

            <input type="password" name="MatKhau" class="form-control" placeholder="Xác nhận mật khẩu mới" />
            @Html.ValidationMessage("ConfirmPassword", new { @class = "text-danger" })

            <button type="submit" class="btn btn-success form-control">Xác nhận</button>
        </form>
    </div>
</div>

