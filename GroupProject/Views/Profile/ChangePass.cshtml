@model GroupProject.Models.ChangePass

@{
    ViewBag.Title = "ChangePass";
    Layout = "~/Views/Shared/MainLayout/_MainLayout.cshtml";
}

<div class="card m-auto" style="width: 30rem;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="card card-outline-secondary">
            <div class="card-header">
                <h3 class="mb-0">Đổi mật khẩu</h3>
            </div>
            <div class="card-body">
                <form class="form" role="form" autocomplete="off">
                    <div class="form-group">
                        <label for="inputPasswordOld">Mật khẩu hiện tại</label>
                        <input type="password" name="CurrentPassword" class="form-control" id="inputPasswordOld" placeholder="Nhập mật khẩu hiện tại" required>
                        @*<div class="text-danger">@Html.ValidationMessageFor(m => m.CurrentPassword)</div>*@
                        @Html.ValidationMessage("CurrentPassword", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="inputPasswordNew">Mật khẩu mới</label>
                        <input type="password" name="NewPassword" class="form-control" id="inputPasswordNew" placeholder="Nhập mật khẩu mới" required>
                    </div>
                    <div class="form-group">
                        <label for="inputPasswordNewVerify">Xác nhận mật khẩu</label>
                        <input type="password" name="ConfirmPassword" class="form-control" id="inputPasswordNewVerify" placeholder="Xác nhận mật khẩu mới" required>
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        @Html.ValidationMessage("ConfirmPass", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-lg float-md-left">Xác nhận</button>
                        <button type="button" class="btn btn-success btn-lg ml-2 text-white text-decoration-none">@Html.ActionLink("Quay lại", "Index")</button>
                    </div>
                </form>
            </div>
        </div>
    }
</div>
